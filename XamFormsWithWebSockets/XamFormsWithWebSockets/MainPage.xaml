<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:XamFormsWithWebSockets"
             x:Class="XamFormsWithWebSockets.MainPage">
    <StackLayout>
        <StackLayout>
            <Entry x:Name="Message"/>
            <Button Text="Send"
                    x:Name="ButtonSend"
                    Clicked="ButtonSend_OnClicked"/>
        </StackLayout>

        <Label Text="Messages"/>

        <StackLayout x:Name="ReceivedMessages"/>
    </StackLayout>
</ContentPage>